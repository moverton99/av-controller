{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch AV Controller",
            "program": "${workspaceFolder}/dist/server.js",
            "preLaunchTask": "tsc: build - tsconfig.json"
        },
        {
            "type": "msedge",
            "name": "Open index.html in Edge",
            "request": "launch",
            "runtimeArgs": [
                "--remote-debugging-port=9222"
            ],
            "url": "http://localhost:3000/index.html", // <-- Update this to match your server's port
            "webRoot": "${workspaceFolder}/public"
        }
    ],
    "compounds": [
        {
            "name": "Start Server and Open Browser",
            "configurations": [
                "Launch AV Controller",
                "Open index.html in Edge"
            ]
        }
    ]
}